{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/website/lazy": ["libs/website/lazy/src/index.ts"],
      "@portfolio/website/ui": ["libs/website/ui/src/index.ts"],
      "@portfolio/website/const": ["libs/website/const/src/index.ts"],
      "@portfolio/website/interface": ["libs/website/interface/src/index.ts"],
      "@portfolio/website/model": ["libs/website/model/src/index.ts"],
      "@portfolio/website/shared": ["libs/website/shared/src/index.ts"],
      "@portfolio/website/service": ["libs/website/service/src/index.ts"],
      "@portfolio/website/components": ["libs/website/components/src/index.ts"],
      "@portfolio/website/routes": ["libs/website/routes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
